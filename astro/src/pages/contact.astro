---
// Component Imports
import BaseLayout from '../layouts/BaseLayout.astro'
import Button from '../components/Button.astro'
import styles from '../styles/Contact.module.scss'

// Component Script:

const title = 'Contact - Richard'
const description = 'Read more about Richard and his experience.'
const permalink = ''
const publishDate = ''

---
<BaseLayout title={title}>
	<header>
		<h1>Contact</h1>
		<p>If you have any questions for me or would like to get connected I would love to hear from you.</p>
	</header>
	<main>
		<form class={styles.form} name="contact" method="POST" data-netlify="true">
  			<p>
    			<label>Your Name: <input type="text" name="name" /></label>   
  			</p>
  			<p>
    			<label>Your Email: <input type="email" name="email" /></label>
  			</p>
  			<p>
    			<label>Message: <textarea name="message"></textarea></label>
  			</p>
  			<p>
    			<Button type="submit">Send</Button>
  			</p>
		</form>
	</main>
</BaseLayout>