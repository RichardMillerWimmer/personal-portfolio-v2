---
// Component Imports
import BlogCard from '../../components/BlogCard.astro';
import styles from '../../styles/Blog.module.scss';
import BlogLayout from '../../layouts/BlogLayout.astro';
import BlogNav from '../../components/Nav/BlogNav.astro';
import BlogAside from '../../components/BlogAside.astro';

const posts = (await Astro.glob('./*.mdx')).sort(
  (a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf()
)

const title = 'Blog - Richard'

---

<style lang='scss'>
  header {
    margin-bottom: 20px;
  }
</style>

<BlogLayout title={`${title} - Richard`} wrapper={false}>
      <header>
        <h1>{title}</h1>
      </header>
      <section >
        <div>
          {posts.map((post) => (
            <BlogCard post={post} />
            ))}
        </div>
      </section>
</BlogLayout>