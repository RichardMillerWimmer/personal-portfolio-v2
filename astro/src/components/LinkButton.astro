---
import styles from '../styles/LinkButton.module.scss'

interface LinkButtonProps {
  href: string
  noreferrer?: string
}

const {href, noreferrer} = Astro.props as LinkButtonProps

---

<style>
  svg {
    height: 45px;
    left: 0;
    position: absolute;
    width: 100%; 
  }
  rect {
    fill: none;
    stroke: rgb(0, 0, 0);
    stroke-width: 2;
    stroke-dasharray: 422, 0;
    transition: all 0.35s linear;
  }
  a {
    line-height: 1.4;
    padding: .25em;
    text-align: center;
  }

</style>

<a class={styles.btn} href={href} rel={noreferrer}>
    <svg class="">
      <rect x="0" y="0" fill="none" width="100%" height="100%" />
    </svg> <slot />
</a>  