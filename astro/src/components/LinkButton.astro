<style>
  svg {
    height: 45px;
    left: 0;
    position: absolute;
    top: 0; 
    width: 100%; 
  }
  rect {
    fill: none;
    stroke: rgb(0, 0, 0);
    stroke-width: 2;
    stroke-dasharray: 422, 0;
    transition: all 0.35s linear;
  }
  a {
    background: rgba($white, 0);
    /* border-bottom: 1px solid; */
    color: $white;
    line-height: 1.4;
    padding: .25em;
    text-align: center;
  }
  a:hover {
      background: rgba(white, 1);
      color: $red;
  }

.btn {
  color: rgb(0, 0, 0);
  cursor: pointer;
  display: block;
  font-size:16px;
  font-weight: 400;
  line-height: 45px;
  margin: 0 0 2em;
  max-width: 160px; 
  position: relative;
  text-decoration: none;
  text-transform: uppercase;
  width: 100%;   
}
.btn:hover {
  text-decoration: none;
}
.btn-1 {
  background: darken(white, 1.5%);
  font-weight: 100;
}
.btn-1:hover {
  background: rgba(green, 0);
  font-weight: 900;
  /* letter-spacing: 1px; */
}
.btn:hover rect {
    stroke-width: 5;
    stroke-dasharray: 15, 310;
    stroke-dashoffset: 48;
    transition: all 1.35s cubic-bezier(0.19, 1, 0.22, 1);
  }

</style>

<a class="btn btn-1">
    <svg class="">
      <rect x="0" y="0" fill="none" width="100%" height="100%" />
    </svg> <slot />
</a>  