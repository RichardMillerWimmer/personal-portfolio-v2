---
    interface ThumbnailProps {
        src: string
        title: string
        description: string
        url: string
    }

    const { src, title, description, url } = Astro.props as ThumbnailProps
---

<style>
    .container {
        position: relative;
    }

    img {
        height: 300px;
        display: block;
        margin: 0 auto;
    }

    .thumbnailContent {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<div class='container'>
    <a href={url}>
        <img src={src} />
        <div class="thumbnailContent">
            <h3>{title}</h3>
            <p>{description}</p>
        </div>
    </a>
</div>