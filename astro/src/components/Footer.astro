---
// Component Imports:
import GitHub from '/assets/github-original.svg'
import LinkedIn from '/assets/linkedin-plain.svg'

// Component Script:

---

<style lang='scss'>
    @import '../styles/_variables.scss';
    footer {
        position: absolute;
        width: 100%;
        bottom: 0;
        left: 0;
        margin: 10px 0;
    }

    p {
        font-family: $font-header;
        text-align: center;
    }
    img{
        margin: 5px;
        height: 40px;
        transition: all 0.5s;
    }
    img:hover {
        transform: scale(1.05);
    }
    .linkContainer {
        text-align: center;
        margin: 0 auto;
    }
</style>

<footer>
    	<p>&copy; 2021 Richard Miller Wimmer</p>
        <div class="linkContainer">
            <a href="https://github.com/RichardMillerWimmer" target="_blank" rel="noreferrer">
                <img width="40" height="40" src={GitHub} alt="github"/>
            </a>
            <a href="https://www.linkedin.com/in/richard-miller-wimmer/"
                target="_blank" rel="noreferrer">
                <img width="40" height="40" src={LinkedIn} alt="linkedin" />
            </a>
        </div>
</footer>