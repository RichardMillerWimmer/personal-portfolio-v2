---
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"



interface BlogLayoutProps {
    title: string
    description?: string
    permalink?: string
    publishDate?: string
    wrapper: boolean
}

const { title, description, permalink, publishDate, wrapper } = Astro.props as BlogLayoutProps
---

<style lang ='scss'>
    @import '../styles/_variables.scss';

</style>

<html lang="en">
<BaseHead title={title} description={description} permalink={permalink} publishDate={publishDate} />
<body>
    <main class="content">
        <slot/>
        <div class="footerWrapper">
            <Footer />
        </div>
    </main>
</body>
</html>

<style lang='scss'>
    .content {
        position: relative;
        min-height: calc(100vh - 105px);
        margin: 5px auto 50px;
        padding: 20px 0;
    }
    .footerWrapper {
        margin-top: 80px;
    }
</style>