---
interface TagsProps {
  tags: string[]
  class?: string
}
const { tags, class: styles } = Astro.props as TagsProps
---

<style lang="scss">
  @import '../styles/_variables.scss';
  .tagContainter{
    display: inline-block;
  }
  .tag{
    display: inline-block;
    padding: 2px 5px;
    margin-right: 5px;
    border: 1px solid $color-medium;
    border-radius: 20px;
    color: $color-black;
    background-color: rgb(244, 244, 244);
  }
</style>

<div class='tagContainter'>
  {tags.map((keyword: string) => (
    <span class='tag'>{keyword}</span>
  ))}
</div>