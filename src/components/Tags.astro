---
import { generateSlug } from "../utils/helpers";

interface TagsProps {
  tags: string[];
  class?: string;
  basePath: string;
}
const { tags, class: styles, basePath } = Astro.props as TagsProps;
---

<style lang="scss">
  @import "../styles/_variables.scss";
  .tagContainter {
    display: inline-block;
  }
  .tag {
    display: inline-block;
    padding: 2px 5px;
    margin-right: 5px;
    border: 1px solid $color-medium;
    border-radius: 20px;
    color: $color-black;
    background-color: rgb(244, 244, 244);
    font-size: 1rem;
  }
</style>

<ul class="tagContainter">
  {
    tags.map((keyword: string) => (
      <li class="tag">
        <a href={`${basePath}/${generateSlug(keyword)}`} >
          {keyword}
        </a>
      </li>
    ))
  }
</ul>
