---
// Component Imports:
import HomeIcon from '/HomeIcon.svg'
import WorkIcon from '/WorkIcon.svg'
import AboutIcon from '/AboutIcon.svg'
import BlogIcon from '/BlogIcon.svg'
import ContactIcon from '/ContactIcon.svg'
import NavLink from './IconLink'

// Component Script:
const page = new URL(Astro.request.url).pathname;

---

<style lang="scss">
    @import '../../styles/_variables.scss';
    ul {
        padding: 30px 0;
        text-align: center;
    }
    .navWrapper {
        width: 80px;
        border-left: black 1px solid;
        height: calc(100vh - 86px);
        position: sticky;
        top: 30px;
    }

    @media screen and (max-width: $bp-tablet) {
    .navWrapper {
        position: relative;
        height: unset;
        top: unset;
        border-left: unset;
        width: auto;
    }
    .navWrapper > ul {
        display: flex;
        flex-flow: row;
        justify-content: center;
        padding: unset;
    }

}
</style>

<nav class="navWrapper">
        <ul>
            <NavLink page={page} text='home' href='/' child={HomeIcon}/>
            <NavLink page={page} text='work' href='/work' child={WorkIcon}/>
            <NavLink page={page} text='about' href='/about' child={AboutIcon}/>
            <NavLink page={page} text='blog' href='/blog' child={BlogIcon}/>
            <NavLink page={page} text='contact' href='/contact' child={ContactIcon}/>
        </ul>
</nav>