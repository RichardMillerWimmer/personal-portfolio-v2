---
// Component Imports
import BlogCard from '../../components/BlogCard.astro';
import BlogLayout from '../../layouts/BlogLayout.astro';

const posts = (await Astro.glob('./*.mdx')).sort(
  (a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf()
)

const title = 'Blog | Richard the Dev'
const description = 'Read more on the blog here with articles written about branding and development/engineering by Richard the Dev.'

---

<style lang='scss'>
  header {
    margin-bottom: 20px;
  }
</style>

<BlogLayout title={`${title} - Richard`} description={description} wrapper={false}>
  <header>
    <h1>Blog</h1>
  </header>
  <main>
    <section id='main-content'>
      <div>
        {posts.map((post) => (
          <BlogCard post={post} />
          ))}
      </div>
    </section>
  </main>
</BlogLayout>