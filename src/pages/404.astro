---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Page Not Found';
---

<style lang='scss'>
    .notFoundContainer a {
        display: block;
        text-align: center;
        text-decoration: underline;
    }

</style>

<BaseLayout title={title} wrapper>
    <section class="notFoundContainer">
        <h1>404</h1>
        <p>Uh Oh! We couldn't find the page you were looking for. Looks like it doesn't exist or something is under
            construction.</p>
        <a href="/">Return Home</a>
    </section>
</BaseLayout>